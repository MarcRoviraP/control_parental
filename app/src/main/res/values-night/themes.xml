<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema base con modo oscuro -->
    <style name="Theme.ControlParental" parent="Theme.AppCompat.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/primary_600</item>
        <item name="colorPrimaryDark">@color/primary_800</item>
        <item name="colorAccent">@color/accent_600</item>

        <!-- Colores de fondo y superficie -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>

        <!-- Colores de texto -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/text_secondary_dark</item>

        <!-- Barra de estado -->
        <item name="android:statusBarColor">@color/surface_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Barra de navegación -->
        <item name="android:navigationBarColor">@color/surface_dark</item>

        <!-- Colores de control -->
        <item name="colorControlNormal">@color/text_secondary_dark</item>
        <item name="colorControlActivated">@color/primary_600</item>
        <item name="colorControlHighlight">@color/border_dark</item>

        <!-- Colores de bordes y divisores -->
        <item name="colorBorder">@color/border_dark</item>
        <item name="colorDivider">@color/divider_dark</item>

        <!-- Colores de botones -->
        <item name="colorButtonNormal">@color/primary_600</item>

        <!-- Estilo de diálogos -->
        <item name="alertDialogTheme">@style/AlertDialogTheme.Dark</item>

        <!-- Estilo de cards -->
        <item name="cardViewStyle">@style/CardViewStyle.Dark</item>
    </style>

    <!-- Tema para AlertDialog modo oscuro -->
    <style name="AlertDialogTheme.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/primary_600</item>
        <item name="colorAccent">@color/accent_600</item>
        <item name="android:background">@color/surface_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
    </style>

    <!-- Estilo para CardView modo oscuro -->
    <style name="CardViewStyle.Dark" parent="CardView">
        <item name="cardBackgroundColor">@color/card_dark</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <!-- Estilo para botones modo oscuro -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/primary_600</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilo para botones de texto modo oscuro -->
    <style name="ButtonTextStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/primary_600</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>

