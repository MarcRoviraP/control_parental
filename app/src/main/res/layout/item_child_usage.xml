<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- InformaciÃ³n del hijo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/fingerprint_dialog_fp_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/childNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hijo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"/>

                <TextView
                    android:id="@+id/lastUpdateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actualizado hace 30s"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"/>

            </LinearLayout>

            <TextView
                android:id="@+id/appsCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 apps"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"/>

        </LinearLayout>

        <!-- Divisor -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

        <!-- RecyclerView para apps del hijo -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/appsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

        <!-- BotÃ³n para gestionar apps bloqueadas -->
        <Button
            android:id="@+id/manageAppsButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ðŸ”’ Gestionar Apps Bloqueadas"
            android:textColor="#2196F3"
            android:textSize="14sp" />

        <!-- BotÃ³n para gestionar lÃ­mites de tiempo -->
        <Button
            android:id="@+id/manageTimeLimitsButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="â° Gestionar LÃ­mites de Tiempo"
            android:textColor="#FF9800"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
